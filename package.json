{
  "name": "wgsl-renderer",
  "version": "0.0.3",
  "description": "一个基于WebGPU和WGSL的多通道渲染器",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/taiyuuki/wgsl-renderer"
  },
  "bugs": "https://github.com/taiyuuki/wgsl-renderer/issues",
  "homepage": "https://github.com/taiyuuki/wgsl-renderer#readme",
  "scripts": {
    "lint": "eslint --fix",
    "build": "rolldown -c",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "webgpu",
    "wgsl",
    "renderer",
    "graphics",
    "webgl",
    "typescript"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "author": "taiyuuki <taiyuuki@qq.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@webgpu/types": "^0.1.66"
  },
  "devDependencies": {
    "@taiyuuki/eslint-config": "^1.4.14",
    "@types/node": "^20.14.2",
    "eslint": "^9.5.0",
    "rimraf": "^6.1.2",
    "rolldown": "1.0.0-beta.52",
    "rolldown-plugin-dts": "^0.18.1",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "9"
      }
    }
  }
}